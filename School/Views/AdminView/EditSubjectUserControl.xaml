<UserControl x:Class="School.Views.AdminView.EditSubjectUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:School.ViewModels.UsersControl.Admin"
             mc:Ignorable="d" 
             Style="{StaticResource MyUserControlStyle}">
    <UserControl.DataContext>
        <local:EditSubjectUserControlVM/>
    </UserControl.DataContext>

    <Grid Style="{StaticResource MyGridStyle}">

        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="250"></RowDefinition>
            <RowDefinition Height="400"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Row="0" Grid.ColumnSpan="4">
            <Menu IsMainMenu="True" Grid.ColumnSpan="8">
                <MenuItem Header="_File">
                    <MenuItem Header="_Back" Command="{Binding OpenUserControlCommand}" CommandParameter="1"/>
                    <MenuItem Header="_Log out" Command="{Binding OpenUserControlCommand}" CommandParameter="2"/>
                    <MenuItem Header="_Exit" Command="{Binding OpenUserControlCommand}" CommandParameter="3"/>
                </MenuItem>
            </Menu>
        </StackPanel>

        <TextBlock  Grid.Row="1" Grid.ColumnSpan="4" Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" Text="List of subjects:"  FontSize="20" TextAlignment="Center" FontStretch="ExtraCondensed"  Width="Auto"/>
        <ListBox Grid.Row ="2" Grid.ColumnSpan="4" Name="listStudents" ItemsSource="{Binding Subjects}" Width="600" Height="250">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBox Name="txtId" Text="{Binding Id}" Height="31" Width="50"/>
                        <TextBox Name="txtFirstName"  Text="{Binding Name}" Height="31" Width="120"/>
                        <TextBox Name="txtLastName" Text="{Binding Term}" Height="31" Width="120"/>
                    </WrapPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="3" Grid.Column="0"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock  Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Text="Id:"  FontSize="20" TextAlignment="Center" FontStretch="ExtraCondensed"  Width="Auto"/>
            <TextBlock  Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,25,0,0" Text="Name"  FontSize="20" TextAlignment="Center" FontStretch="ExtraCondensed"  Width="Auto"/>
            <TextBlock  Height="32" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,25,0,0" Text="Term:"  FontSize="20" TextAlignment="Center" FontStretch="ExtraCondensed"  Width="Auto"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Name="textBoxId" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" Width="300" Height="32" />
            <TextBox Name="textBoxName" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,25,0,0" Width="300" Height="32" />
            <TextBox Name="textBoxTerm" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,25,0,0" Width="300" Height="32" />
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.Column="3"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Edit student" Height="25" Margin="0,40,0,0"  Width="150" Command="{Binding OpenUserControlCommand}" CommandParameter="4"/>
            <Button Content="Delete student" Height="25" Margin="0,30,0,0"  Width="150" Command="{Binding OpenUserControlCommand}" CommandParameter="5"/>
            <Button Content="Add students" Height="25" Margin="0,30,0,0"  Width="150" Command="{Binding OpenUserControlCommand}" CommandParameter="6"/>
            <Button Content="Save students" Height="25" Margin="0,30,0,0"  Width="150" Command="{Binding OpenUserControlCommand}" CommandParameter="7" Visibility ="Hidden"/>
        </StackPanel>

    </Grid>
</UserControl>
