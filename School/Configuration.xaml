<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="Color1">#ffe4c4</Color>
    <Color x:Key="Color2">#fdba00</Color>

    <Style x:Key="MyWindowStyle" TargetType="{x:Type Window}">
        <Setter Property="Height" Value="800" />
        <Setter Property="Width" Value="800" />
    </Style>

    <Style x:Key="MyUserControlStyle" TargetType="{x:Type UserControl}">
        <Setter Property="Height" Value="800" />
        <Setter Property="Width" Value="800" />
    </Style>

    <Style x:Key="MyGridStyle" TargetType="{x:Type Grid}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="{StaticResource Color1}" Offset="0"/>
                    <GradientStop Color="{StaticResource Color2}" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>